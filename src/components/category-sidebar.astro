---
import blogs from "../pages/blog/blogs.json";

const podcastCategories = [
    {name : "Vocatio Reimagined", collection: "/collection/vocatio-reimagined", category: "podcasts", tags: ["vocatio"], available: true},
    // {name : "Peace Keeping", collection: "/collection/peace-keeping" , category: "podcasts",  tags: ["exploration"], available: false},
]

const formationcCategories = [
    {name : "Devotional", collection: "/collection/devotional" , category: "formation",  tags: ["devotional"]},
    {name : "Moments of Stillness", collection: "/collection/moments-of-stillness" , category: "formation", tags: ["momentsOfStillness"]},
    // {name : "Guided Practices", collection: "/collection/guided-practices" , category: "formation", tags: ["guidedPractices"]}
]


---
<div class=" col-span-2 lg:col-span-1 h-fit overflow-y-scroll rounded-lg lg:bg-neutral-800 p-1">
    <h3 class="p-2 font-bold mb-3 text-xl text-gray-400 lg:text-white">
        Explore
    </h3>
  
    <ul class=" p-1 rounded-lg inline-flex whitespace-nowrap lg:whitespace-normal lg:block ">
        <h4 class="hidden lg:block p-2 font-bold text-sm text-white opacity-50"> 
            Podcasts
        </h4>
        {podcastCategories.map((category) => (
            <a href={category.collection} class={ !category.available ? `hidden` : ` me-3 lg:mb-3 lg:me-0 p-1 px-2 rounded-lg text-white inline-flex lg:flex items-center justify-start cursor-pointer lg:bg-transparent hover:bg-neutral-700  `}>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-orange-500 size-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
                </svg>
                <p class="ms-2 text-sm">{category.name}</p>
            </a>
        ))}

       <h4 class="hidden lg:block p-2 font-bold text-sm text-white opacity-50">
            Formation
        </h4>
        {formationcCategories.map((category) => (
           <a href={category.collection} class=" me-3 lg:mb-3 lg:me-0 p-1 px-2 rounded-lg text-white inline-flex lg:flex items-center justify-start cursor-pointer lg:bg-transparent hover:bg-neutral-700  ">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-blue-500 size-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m6.115 5.19.319 1.913A6 6 0 0 0 8.11 10.36L9.75 12l-.387.775c-.217.433-.132.956.21 1.298l1.348 1.348c.21.21.329.497.329.795v1.089c0 .426.24.815.622 1.006l.153.076c.433.217.956.132 1.298-.21l.723-.723a8.7 8.7 0 0 0 2.288-4.042 1.087 1.087 0 0 0-.358-1.099l-1.33-1.108c-.251-.21-.582-.299-.905-.245l-1.17.195a1.125 1.125 0 0 1-.98-.314l-.295-.295a1.125 1.125 0 0 1 0-1.591l.13-.132a1.125 1.125 0 0 1 1.3-.21l.603.302a.809.809 0 0 0 1.086-1.086L14.25 7.5l1.256-.837a4.5 4.5 0 0 0 1.528-1.732l.146-.292M6.115 5.19A9 9 0 1 0 17.18 4.64M6.115 5.19A8.965 8.965 0 0 1 12 3c1.929 0 3.716.607 5.18 1.64" />
                </svg>
                <p class="ms-2 text-sm">{category.name}</p>
            </a>
        ))}

        <h4 class="hidden lg:block p-2 font-bold text-sm text-white opacity-50"> Blogs</h4>
        {blogs.posts.map((post) => (
            <a href={post.link} class="lg:mb-3 p-1 px-2 rounded-lg text-white flex items-center justify-start cursor-pointer hover:bg-neutral-500  ">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-green-500 size-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                </svg>
                
                <p class="ms-2 text-sm">{post.title}</p>
            </a>
        ))}
    </ul>
</div>