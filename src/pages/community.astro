	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</head>

<body class="bg-[#191B1F] m-auto">

	<Loader />
	<Header position="sticky" />

	<div class="w-full h-screen bg-black">
		<iframe style="border: 0; box-shadow: none; position: relative; display: block; width: 100%; height: 100%;" src="https://community.vocationalformation.com/"></iframe>
	</div>

	<script>
		document.addEventListener('DOMContentLoaded', function() {
		  function updateHeaderHeight() {
			var header = document.getElementById('header');
			if (header) {
			  var height = header.getBoundingClientRect().height; document.documentElement.style.setProperty('--header-height', `${height}px`);
			}
		  }
		  updateHeaderHeight();
		  var resizeTimer;
		  var isScheduled = false;
		  function onResize() {
			if (isScheduled) return;
			isScheduled = true;
			window.requestAnimationFrame(function() {
			  updateHeaderHeight();
			  isScheduled = false;
			});
		  }
		  window.addEventListener('resize', onResize);
		});
		</script>


</body>

