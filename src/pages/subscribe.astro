---
import "./app.css"

---
<head>
	<link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />

	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</head>

<body>
    <div class="bg-black w-full h-screen flex flex-col items-center justify-center">
        <img class="w-[200px] mb-10" src="/acu_logo.png" alt=""/>
   
        <div class="w-full   rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight  md:text-2xl text-white">
                    Subscribe today.
                </h1>
                <p class="text-gray-200">
                    Keep up with launch of <span class="text-blue-500">vocationalformation.com</span>.
                </p>
                <form class="space-y-4 md:space-y-6" action="/" method="POST"  data-netlify="true">
                    <div>
                        <label for="name" class="block mb-2 text-sm font-medium text-white">Your name</label>
                        <input type="text" name="name" id="name" class=" border text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" placeholder="John Doe" required="true">
                    </div>
                    <div>
                        <label for="email" class="block mb-2 text-sm font-medium text-white">Your email</label>
                        <input type="email" name="email" id="email" class="border text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" placeholder="name@email.com" required="true">
                    </div>
                    <div>
                        <label for="phone" class="block mb-2 text-sm font-medium text-white">Your phone number</label>
                        <input  type="tel" id="phone" name="phone" class="border text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="XXX-XXX-XXXX">
                    </div>
                    
                    <button type="submit" class="w-full text-white bg-blue-600 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center g-primary-600 hover:bg-primary-700 focus:ring-primary-800">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
</body>


