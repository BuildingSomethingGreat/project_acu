---
// import "../../styles/global.css";


var heroVideo = {
  title: "Introduction",
  description: "We are about to embark on a journey of grief pain and healing. We are going to meet Bobby.",
  courseNumber: "1",
  moduleNumber: "1",
  backgroundImageSrc: "/meetboby-bg-photo.png",
  poster: "/meetbobby-logo_1.png",
  videSrc: "https://acu-cdn-pull.b-cdn.net/Module%20ONE%201.2.mp4",
  trailerSrc: "https://acu-cdn-pull.b-cdn.net/Demo%20Trailer.mp4",
};

var moduleLegend =  [
   {index: 0 , title: "Trailer"},
   {index: 1 , title: "Episode 1"},
   {index: 2 , title: "Episode 2"},
   {index: 3 , title: "Episode 3"},
   {index: 4 , title: "Episode 4"},
   {index: 5 , title: "Completion"},
]

var moduleInformation =  [
{index: 0 , title: "Trailer", description: "Embark on a spiritual journey with Bobby, exploring themes of faith, healing, and rediscovery.", weeks: [], metadata: "Spiritual Journey", graphicSrc: "/spiritual-journey.png", cta: "Start Now"},
{index: 1 , title: "Episode 1", description: "Discover how to rebuild and find light in the midst of darkness, embracing a renewed sense of purpose and faith.", weeks: [{id: "one", link: "https://community.vocationalformation.com/c/demo-course/sections/495521/lessons/1848394"},{id: "two | part 1", link: "https://community.vocationalformation.com/c/demo-course/sections/495521/lessons/1906110"}, {id: "two | part 2", link: "https://community.vocationalformation.com/c/demo-course/sections/495521/lessons/1934047"}], metadata: "Hope and Renewal", graphicSrc: "/finding-hope.png", cta: "Learn More"},
{index: 2 , title: "Episode 2", description: "Delve into the complexities of pain, exploring its role in personal growth and spiritual transformation.", weeks: [{id: "three", link: "https://community.vocationalformation.com/c/demo-course/sections/516921/lessons/1933200"}, {id: "four", link:"https://community.vocationalformation.com/c/demo-course/sections/516921/lessons/1975385"}], metadata: "Pain and Growth", graphicSrc: "/understanding-pain.png", cta: "Explore Now"},
{index: 3 , title: "Episode 3", description: "Delve into the complexities of pain, exploring its role in personal growth and spiritual transformation.", weeks: [{id: "five", link: "https://community.vocationalformation.com/c/demo-course/sections/527435/lessons/1975386"}, {id:"six", link:"https://community.vocationalformation.com/c/demo-course/sections/527435/lessons/1975387"}], metadata: "Pain and Growth", graphicSrc: "/understanding-pain.png", cta: "Explore Now"},
{index: 4 , title: "Episode 4", description: "Delve into the complexities of pain, exploring its role in personal growth and spiritual transformation.", weeks: [{id: "seven", link: "https://community.vocationalformation.com/c/demo-course/sections/527437/lessons/1975392"}], metadata: "Pain and Growth", graphicSrc: "/understanding-pain.png", cta: "Explore Now"},
{index: 5 , title: "Completion", description: "Explore the journey of responding to a higher purpose, embracing faith, and stepping into the unknown with courage and conviction.", metadata: "Purpose and Calling", graphicSrc: "/answering-call.png", cta: "Join Now"},
]
---

<head>
    <script src="../../../node_modules/preline/dist/preline.js"></script>
    <style>
      body, html {
        background: #000d1a;
      }
    </style>
</head>

<!-- nav -->
<div class="min-h-screen max-w-[1500px] m-auto mt-0 bg-[#000d1a] text-white relative overflow-hidden">

	<!-- nav section -->

  <div class="relative top-0 left-0 w-full py-7 px-5 flex items-start justify-between">
		<a href="/reframingproject" class="w-1/3 flex flex-row items-center justify-start">
			<img src="/reframe-logo_1.png" alt="Reframe Logo" class="w-[150px] h-auto me-5" />
			<p class="font-bold my-auto">Let's <span class="text-teal-500">rediscover</span> the bible.</p>
		</a>
		
		<div class="w-1/2 flex flex-row items-center justify-end">
			<div class="ms-4 my-auto flex flex-row items-center justify-center">
				<a href="" class="font-bold text-white me-4 hover:underline">Courses</a>
				<a href="" class="font-bold text-white me-4">Resources</a>
			</div>
      <a href="/reframingproject/auth" class="">
				<img src="/avatar-mock.png" alt="Reframe Logo" class="w-[40px] h-auto my-auto me-5" />
			</a>
		</div>
	</div>		
	<!-- hero section -->

	<div class="relative h-full overflow-hidden">
		
		<!-- hero : background -->
		<div class="z-10 relative top-0 left-0 inset-0">
			  <video class="relative top-0 right-0 w-full h-full object-cover" muted autoplay controls playsinline>
				<source src={heroVideo.trailerSrc} type="video/mp4" />
				</video>			
			  <!-- <img src={heroVideo.backgroundImageSrc} alt="cover" class="subtle-zoom  absolute top-0 right-0 w-full h-auto object-cover" /> -->
			  <!-- <div class="absolute inset-0 bg-gradient-to-r  from-[#000d1a] via-[#002142]/60 to-transparent" /> -->
		</div>

		<!-- hero : informative -->
      
		<div class="z-20 sticky top-0 grid grid-cols-3 w-full auto gap-4 ">
            <div class="col-span-3 my-4 p-5">
                <ol class="flex items-center whitespace-nowrap">
                    <li class="inline-flex items-center">
                      <a class="flex items-center text-sm text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600" href="#">
                        Season 1 
                      </a>
                      <svg class="shrink-0 size-5 text-gray-400 mx-2" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path d="M6 13L10 3" stroke="currentColor" stroke-linecap="round"></path>
                      </svg>
                    </li>
                    <li class="inline-flex items-center">
                      <a class="flex items-center text-sm text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600" href="#">
                        Meet Bobby
                      </a>
                    </li>
                  </ol>
            </div>


            <div class="col-span-1 my-4 p-6 flex flex-col items-center justify-start">
                <img src={heroVideo.poster} alt="Meet Bobby" class="w-full h-auto " />
			      </div>

            <div class="col-span-2 my-4 p-6 w-full flex flex-col items-start justify-start">
                
                <div class="flex flex-row">
                    <div class="border-e border-gray-200 h-[300px] max-h-[300px]  dark:border-neutral-700">
                      <nav class="flex flex-col space-y-2 " aria-label="Tabs" role="tablist" aria-orientation="horizontal">
                        {moduleLegend.map((btn, index) => (
                            <button type="button" class={`hs-tab-active:border-blue-500 hs-tab-active:text-blue-600 dark:hs-tab-active:text-blue-600 py-1 pe-4 inline-flex items-center gap-x-2 border-e-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500 ` + (index == 0 ? `active` : ``)} id={`vertical-tab-with-border-item-` + index} aria-selected={index == 0} data-hs-tab={`#vertical-tab-with-border-` + index} aria-controls={`vertical-tab-with-border-` + index} role="tab">
                                {btn.title}
                            </button>
                        ))}
                      </nav>
                    </div>
                  
                    <div class="ms-3 ps-3 h-full max-h-[350px]">
                        {moduleInformation.map((module, index) => (
                            <div id={`vertical-tab-with-border-` + index} class={(index == 0) ? `` : `hidden`}  role="tabpanel" aria-labelledby={`vertical-tab-with-border-item-` + index}>
                                <div class="">
                                    <h3 class="text-white opacity-50 font-semibold">{module.metadata}</h3>
                                    <h2 class="my-3 text-2xl font-bold">{module.title}</h2>
                                    <p class="text-base opacity-70">{module.description}</p>
                                </div>
                                
                                {module.weeks?.map((week) => (
                                    <a href={week.link} class="week-button cursor-pointer my-5 bg-white text-black rounded-full w-[250px] h-[50px] flex items-center justify-center hover:bg-teal-500 hover:text-white">
                                        <p class="font-bold ">Week {week.id}</p>
                                    </a>
                                  ))}

                                 {/* <div class="col-span-3 h-[1000px]">	
                                    <iframe style="border: 0; box-shadow: none; width: 100%; height: 100%;" src="https://community.vocationalformation.com/c/demo-course/sections/495521/lessons/1848394?iframe=true"></iframe>
                                </div>  */}
                            </div>
                        ))}
                      
                      <div id="vertical-tab-with-border-2" class="hidden" role="tabpanel" aria-labelledby="vertical-tab-with-border-item-2">
                        <p class="text-gray-500 dark:text-neutral-400">
                          This is the <em class="font-semibold text-gray-800 dark:text-neutral-200">second</em> item's tab body.
                        </p>
                      </div>
                      <div id="vertical-tab-with-border-3" class="hidden" role="tabpanel" aria-labelledby="vertical-tab-with-border-item-3">
                        <p class="text-gray-500 dark:text-neutral-400">
                          This is the <em class="font-semibold text-gray-800 dark:text-neutral-200">third</em> item's tab body.
                        </p>
                      </div>
                    </div>
                  </div>

			
				<!-- <div class="cursor-pointer my-5 bg-white text-black rounded-full w-[250px] h-[50px] flex items-center justify-center hover:bg-teal-500 hover:text-white">
					<p class="font-bold ">Start Module {heroVideo.moduleNumber}</p>
				</div> -->
			</div>

			<div class="col-span-3 h-[1000px]">	
                <iframe id="course-iframe" style="border: 0; box-shadow: none; width: 100%; height: 100%;" src="https://community.vocationalformation.com/c/demo-course/sections/495521/lessons/1848394?iframe=true"></iframe>
			</div>
		</div>
	</div>

</div>

<script>
  (function(){
    document.addEventListener("DOMContentLoaded", function() {
        // Add event listeners to week buttons inside each module
        const iframe = document.querySelector('#course-iframe');
        const weekButton = document.querySelectorAll(".week-button");
        weekButton.forEach((button) => {
          button.addEventListener('click', (event) => {
              event.preventDefault();
              iframe.src = button.href;
            });
        });
    });
      
  })();
</script>