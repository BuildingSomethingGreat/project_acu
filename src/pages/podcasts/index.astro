---
import {SEO} from "astro-seo";

import "./../app.css"

import Header from "../../components/header.astro"
import Loader from "../../components/loader.astro";
import VideoSocialShare from "../../components/videosocialshare.astro"
import Divider from "../../components/divider.astro";
import Footer from "../../components/footer.astro";
import BlogText from "../../components/blogText";
import podcasts from "./podcasts.json";
--- 

<head>
    <SEO
      title="Center for Vocational Formation : Blog"
      description="Diverse writings from theologians and CFVF's staff. "
      openGraph={{
        basic: {
          title: "Center for Vocational Formation : Blog",
          type: "Diverse writings from theologians and CFVF's staff.",
          image: "https://acu-cdn-pull.b-cdn.net/vocatiothumb.png",
        }
      }}
      twitter={{
        creator: "@jonasmerlins1"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://acu-cdn-pull.b-cdn.net/vocatiothumb.png",
          },
          { name: "twitter:title", content: "Center for Vocational Formation : Vocatio Reimagined" },
          { name: "twitter:description", content: "Vocatio Reimagined is a podcasts that seeks to explore our vocational formation." },
        ],
      }}
    />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />

	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</head>

<body class="h-screen bg-[#191B1F] ">

   
	<Loader />
    <Header position="relative"/>

    <div class="h-screen  m-auto" id="">
        <div class="grid grid-cols-2 my-5 max-h-[300px] w-full">
            <div class="w-[90%] m-auto col-span-2 grid grid-cols-2">
                <div class="col-span-1 w-[100%] m-auto flex flex-col items-start justify-end">
                    <h2 class=" text-white  text-7xl ">
                        Visual <span class="text-orange-500">podcasts</span>, <br>
                        intentional conversations.
                    </h2>
                    <p class="mt-5 text-lg w-[90%] text-neutral-300">
                        The Vocatio Reimagined series is meant to explore why calling is less about a career path and more about responding to God's 
                        invitation to participate in the healing of the world, no matter your stage of life or occupation.
                    </p> 
                    <div class="my-7 text-orange-500  flex items-center justify-center">
                        <a href="" class="me-3 font-bold rounded-full p-3 px-5 text-sm bg-white flex flex-row items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-orange-500 size-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
                              </svg>
                            Vocatio Reimagined
                        </a>
                        <a href="" class="relative me-3 font-bold rounded-full p-3 px-5 text-sm bg-gray-800 text-gray-400  flex flex-row items-center justify-center">
                            <span class="absolute z-20 -top-3 -right-5 bg-green-700 text-white text-xs font-medium me-2 px-2 py-1 rounded-full">Coming soon</span>

                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
                              </svg>
                            <span class=""> Peace Keeping </span>
                        </a>
                    </div>   
                </div>
                
                <!-- <div class="mx-3"></div> -->
                <div class="relative col-span-1 m-auto  flex items-center justify-center">
                    <svg id="play" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class=" absolute z-30 bottom-3 right-3  size-8">
                        <path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" />
                    </svg>
                    <svg id="pause" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="hidden z-30 absolute bottom-3 right-3 size-8">
                        <path fill-rule="evenodd" d="M6.75 5.25a.75.75 0 0 1 .75-.75H9a.75.75 0 0 1 .75.75v13.5a.75.75 0 0 1-.75.75H7.5a.75.75 0 0 1-.75-.75V5.25Zm7.5 0A.75.75 0 0 1 15 4.5h1.5a.75.75 0 0 1 .75.75v13.5a.75.75 0 0 1-.75.75H15a.75.75 0 0 1-.75-.75V5.25Z" clip-rule="evenodd" />
                    </svg>
                        
                    <video id="vid" class=" z-10 rounded-lg opacity-75 top-0  overflow-hidden object-fill" width="100%" height="auto"  playsinline loop>
                        <source src="https://acu-cdn-pull.b-cdn.net/Episode%201%20Creating%20Space%20in%20a%20Distractred%20World.m4v" type="video/mp4">
                    </video>
                </div>
            </div>

            <Divider />

            <div class="col-span-2 mb-4  bg-black m-auto w-[90%] rounded-lg p-7 grid grid-cols-3 gap-10">
                {podcasts.map((vid) => (
                    <a href={`/podcasts/` + vid.id} data-type="podcasts" data-id={vid.id} class="col-span-1 cursor-pointer relative overflow-hidden   rounded-lg  shadow-md">
                       <div class="row-span-1  overflow-hidden">
                            <img class="relative z-10 top-0 rounded-lg  h-auto w-full m-auto  object-cover opacity-100" src={vid.thumbnail} alt="" />
                       </div>

                        <div class="relative h-[200px] whitespace-normal z-30  left-0 bottom-0 p-5 grid grid-cols-1 grid-rows-2">
                            <div class="row-span-1  flex flex-col text-white items-center justify-start">
                                <p class="opacity-100 text-xs text-orange-500 text-left w-full" >#{vid.category}</p>
                                <h2 class="my-2 w-[100%] text-left opacity-50  text-normal">{vid.title.split(":")[0]}</h2>
                                {(vid.title.split(":")[1].length <= 19) ? <h2 class="my-2 w-[100%] text-left  text-4xl">{vid.title.split(":")[1]}</h2> : <h2 class="my-2 w-[100%] text-left  text-2xl">{vid.title.split(":")[1]}</h2>}
                                
                            </div>
                            
                            <div class="row-span-1 absolute px-5  bottom-2 left-0 right-0 m-auto opacity-50 flex items-start justify-start text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                <p class="mx-2 text-sm">
                                    {vid.views} Views
                                </p>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
       
    </div>

    <Footer />
</body>

<script type="text/javascript">
    function openNewWindow(el) {
        window.open("/" + $(el).data("type") +  "/" + $(el).data("id"), "_blank");
    }
</script>


<script>
    (function() {
        $(document).ready(function() {
            var vid =document.getElementById("vid");

            function togglePlayPause() {
                if  (vid.paused) {
                    vid.play();
                    $("#play").addClass("hidden");
                    $("#pause").removeClass("hidden");

                } else {
                    vid.pause()
                    $("#pause").addClass("hidden");
                    $("#play").removeClass("hidden");
                };

            }

            togglePlayPause(); 

            $("#play, #pause").on("click", function() {
                togglePlayPause(); 
            });
        });
    })();

</script>