---
import Header from "../../components/header.astro"
import Loader from "../../components/loader.astro";
import VideoSocialShare from "../../components/videosocialshare.astro"
import podcasts from "./podcasts.json";
import {SEO} from "astro-seo";


import "./../app.css"
import Footer from "../../components/footer.astro";
export function getStaticPaths() {
  return [
    {params: {pod: '1'}},
    {params: {pod: '2'}},
    {params: {pod: '3'}},
    {params: {pod: '4'}}
  ];
}

const categories = [
    {name : "Vocatio Reimagined", tags: ["vocatio"]},
    {name : "Exploration Emergence", tags: ["exploration"]},
]
const { pod } = Astro.params;

var res = {}
for (var vid of podcasts) {
    if (pod == vid.id) {
        res = vid;
    }
}

--- 

<head>
    <SEO
      title="Center for Vocational Formation : Vocatio Reimagined"
      description="Vocatio Reimagined is a podcasts that seeks exploring what it takes and the challenges around forming our vocation in a modern culture."
      openGraph={{
        basic: {
          title: "Center for Vocational Formation : Vocatio Reimagined",
          type: "Vocatio Reimagined is a podcasts that seeks to explore our vocational formation.",
          image: "https://acu-cdn-pull.b-cdn.net/vocatiothumb.png",
        }
      }}
      twitter={{
        creator: "@jonasmerlins1"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://acu-cdn-pull.b-cdn.net/vocatiothumb.png",
          },
          { name: "twitter:title", content: "Center for Vocational Formation : Vocatio Reimagined" },
          { name: "twitter:description", content: "Vocatio Reimagined is a podcasts that seeks to explore our vocational formation." },
        ],
      }}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />

	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</head>

<body class="h-screen bg-[#191B1F] ">

	<Loader />
    <Header position="relative" />

    <div class=" h-screen w-[98%] m-auto" id="">
        <div style="background: #191B1F" class="  overflow-hidden  bg-[#313638]  flex flex-col items-center justify-center ">

            <div class=" grid grid-cols-2 lg:grid-cols-6 lg:auto-rows-auto  gap-4  overflow-hidden lg:h-screen  p-2">

                <div class="mt-4 col-span-2 lg:col-span-1 h-fit overflow-y-scroll rounded-lg lg:bg-neutral-800 p-1">
                    <h3 class="lg:p-2 font-bold mb-3 text-lg text-gray-400 lg:text-white">
                        Categories
                    </h3>
                    <ul class=" p-1 rounded-lg inline-flex whitespace-nowrap lg:whitespace-normal lg:block ">
                        {categories.map((category) => (
                            <li class=" me-3 lg:mb-3 lg:me-0 p-1 px-2 rounded-lg text-white inline-flex lg:flex items-center justify-start cursor-pointer bg-neutral-700 lg:bg-transparent hover:bg-neutral-700  ">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-orange-500 size-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
                                </svg>
                                <p class="ms-2 text-sm">{category.name}</p>
                            </li>
                        ))}
                    </ul>
                </div>
                
                <div class="col-span-2 row-start-1 lg:row-start-auto lg:col-span-4   h-full p-3 lg:overflow-y-scroll">
                    <div class="w-fit h-fit relative rounded-lg overflow-hidden shadow-lg" >
                        <video preload="auto" id="vid" class=" opacity-75 m-auto  rounded-lg overflow-hidden object-fill max-w-[1000px]" width="100%" height="100%" controls autoplay playsinline>
                            <source src={res.url} type="video/mp4">
                        </video>
                    </div> 

                    <div class="grid grid-cols-2  z-30 mt-4 mb-3 text-white  ">
                        <div class="col-span-1 lg:cols-span-1 flex flex-col items-start">
                            <p class="font-bold opacity-50 text-md">{res.creator}</p>
                            <h2 class=" my-2 text-md lg:ext-xl">{res.title}</h2>
                        </div>
                        
                        <VideoSocialShare title={res.title} link={"https://vocationalformation.com/podcasts/" + res.id} > 
                    </div>
                </div>

                <div class="h-full col-span-2 lg:col-span-1  lg:overflow-y-scroll no-scrollbar grid grid-cols-2 gap-3  lg:block  ">
                    <h3 class="col-span-2 p-2 font-bold mb-3 text-xl text-gray-400">
                        More on <span class="text-orange-500">Vocation</span>
                    </h3>
                    {podcasts.map((vid) => (
                         <a href={`/podcasts/` + vid.id} data-id={vid.id} class="cursor-pointer mb-4 border border-gray-500 grid grid-rows-2 lg:max-h-[300px]  transition-all ease-in-out text-white bg-transparent auto-rows-auto  overflow-hidden rounded-lg p-3">
                                <div class="row-span-1  rounded-lg overflow-hidden">
                                <img class="   m-auto  object-fit rounded-lg" src={vid.thumbnail} alt="" />
                            </div>
                            <div class="mt-5">
                                <h3 class="  my-1 text-base text-left opacity-50">{vid.title.split(":")[0]}</h3>
                                <h3 class="my-1 text-base text-left">{vid.title.split(":")[1]}</h3>
                                {/* <p class="font-bold  p-3 text-sm ">{vid.creator}</p> */}
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        
            
                <!-- <img class="relative block h-auto w-full object-cover" src="/vocatio_fall.png" alt=""/> -->
        </div>
    </div>

    <!-- <Footer /> -->
   
</body>

<script>
    (function() {
        $(document).ready(function() {
            // This allows videos to autoplay with sound
            $("body").click();
        })
    })();
</script>