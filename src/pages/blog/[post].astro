     {id:"4", views: "1", title: "Disclosure Formative", creator: "Dr. Christopher Cobbler", thumbnail: "/vocatiothumb.png", url: "https://acu-cdn-pull.b-cdn.net/Episode%204%20When%20Your%20Calling%20and%20Career%20Do%20Not%20Align.m4v"},
]

const { post } = Astro.params;
const host = Astro.url.host;

var res = {}
for (var vid of videos) {
    if (post == vid.id) {
        res = vid;
    }
}

